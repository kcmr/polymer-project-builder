{
  "name": "@wctools/polymer-project-builder",
  "version": "1.0.0",
  "description": "Custom Polymer project builder",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "lint:js": "eslint --max-warnings 0 **/*.js",
    "commit": "git-cz",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "cli",
    "polymer"
  ],
  "license": "MIT",
  "bin": {
    "build-polymer-project": "bin/cli.js"
  },
  "main": "index.js",
  "files": [
    "lib",
    "bin"
  ],
  "dependencies": {
    "autoprefixer": "^9.5.0",
    "@wctools/build-polymer": "^2.0.0",
    "chalk": "^2.4.2",
    "crisper": "^2.1.1",
    "fancy-log": "^1.3.3",
    "find-up": "^4.0.0",
    "fs-extra": "^8.1.0",
    "html-postcss": "^0.1.2",
    "merge-stream": "^2.0.0",
    "vinyl-fs": "^3.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "commitizen": "^4.0.0",
    "cz-conventional-changelog": "^3.0.0",
    "eslint": "^6.0.0",
    "eslint-config-bbva": "^2.0.4",
    "eslint-plugin-jest": "^22.13.0",
    "eslint-plugin-node": "^9.1.0",
    "husky": "^4.0.0",
    "jest": "^24.5.0",
    "semantic-release": "^19.0.3",
    "yeoman-assert": "^3.1.1"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm t",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/changelog",
      "@semantic-release/git"
    ],
    "branch": "master",
    "tagFormat": "${version}"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "bugs": {
    "url": "https://github.com/wc-tools/polymer-project-builder/issues"
  },
  "homepage": "https://github.com/wc-tools/polymer-project-builder#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wc-tools/polymer-project-builder.git"
  },
  "author": "WC Tools <wc.tools.github@gmail.com>",
  "publishConfig": {
    "access": "public"
  }
}
