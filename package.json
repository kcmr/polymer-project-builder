{
  "name": "polymer-project-builder",
  "version": "1.1.1",
  "description": "Custom Polymer project builder",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "lint:js": "eslint --max-warnings 0 **/*.js",
    "commit": "git-cz",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "cli",
    "polymer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/BBVAEngineering/polymer-project-builder.git"
  },
  "author": "",
  "license": "MIT",
  "bin": {
    "build-polymer-project": "bin/cli.js"
  },
  "main": "index.js",
  "dependencies": {
    "autoprefixer": "^9.5.0",
    "chalk": "^2.4.2",
    "crisper": "^2.1.1",
    "fancy-log": "^1.3.3",
    "find-up": "^3.0.0",
    "fs-extra": "^7.0.1",
    "html-postcss": "^0.1.2",
    "merge-stream": "^1.0.1",
    "polymer-build": "^3.1.2",
    "vinyl-fs": "^3.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/exec": "^3.3.2",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.15.1",
    "eslint-config-bbva": "^2.0.4",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-node": "^8.0.1",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "semantic-release": "^15.13.3",
    "yeoman-assert": "^3.1.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": "8.* || >= 10.*"
  }
}
